<p id="notice"><%= notice %></p>

<h1>친구 목록</h1>

<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>성별</th>
      <th>짧은 소개</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.sex %></td>
        <td><%= post.content %></td>
        <td><%= link_to '상세보기', post %></td>
        <td><%= link_to '수정하기', edit_post_path(post) %></td>
        <td><%= link_to '삭제하기', post, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

